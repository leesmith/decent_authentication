%div(class="justify-center py-5 sm:px-6 lg:px-8")
  %div(class="mt-3 sm:mx-auto sm:w-full sm:max-w-md")
    %div(class="py-8 px-4 sm:px-10")
      %h1.text-center.text-3xl.font-medium.mb-8.tracking-tight Sign In
      = form_with url: [:sessions], data: {turbo: false} do
        %div
          %label(for="email") Email
          .mt-1.rounded-md.shadow-sm
            = email_field_tag :email, params[:email], class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50'
        .mt-6
          .flex.items-center.justify-between
            %label(for="password") Password
            = link_to 'Forgot Password?', new_password_reset_path, class: 'text-sm'
          .mt-1.rounded-md.shadow-sm
            = password_field_tag :password, nil, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50'
        .mt-6
          = submit_tag 'Sign In', class: 'text-blue-500', data: { disable_with: 'Please wait...' }
      .pt-5.text-center
        = link_to 'Create an account', register_path
